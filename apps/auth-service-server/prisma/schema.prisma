datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  createdAt    DateTime    @default(now())
  description  String?
  id           String      @id @default(cuid())
  name         String?
  permission   Permission? @relation(fields: [permissionId], references: [id])
  permissionId String?
  updatedAt    DateTime    @updatedAt
}

model Permission {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  roles       Role[]
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
